{
	"compilerOptions": {
		"module": "commonjs",
		"target": "es6",
		/* Basic Options */
		"outDir": ".",
		"lib": [
			"es6",
			"es2017"
		],
		"sourceMap": false,
		"rootDir": ".",
		"strictNullChecks": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"strict": true,
		"alwaysStrict": true,
		"declaration": true,
		"composite": true,

		/* Module Resolution Options */
		"resolveJsonModule": true,
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules"
	],
	"files": [
		"package.json",
	],
}
